<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/main_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/yuol_main_title"
        android:gravity="top"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher"
            android:gravity="bottom"
            android:padding="3dp" >
        </LinearLayout>

        <!-- 长大在线 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="@string/yuol"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="@string/tips_home" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/main_title"
        android:layout_weight="9"
        android:background="#a7bfdd"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="0dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="0dp" >

            <!-- 教务处 -->

            <Button
                android:id="@+id/jwc_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/yuol_main_tile_jwc"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="15dp"
                android:text="@string/jwc" >
            </Button>

            <!-- 图书馆 -->

            <Button
                android:id="@+id/library_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/yuol_main_tile_library"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="15dp"
                android:text="@string/library" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="0dp" >

            <!-- 通知通告 -->

            <Button
                android:id="@+id/notice_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/yuol_main_tile_notice"
                android:gravity="bottom|center_horizontal"
                android:padding="15dp"
                android:text="@string/notice" >
            </Button>

            <!-- 新闻 -->

            <Button
                android:id="@+id/news_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/yuol_main_tile_news"
                android:gravity="bottom|center_horizontal"
                android:padding="15dp"
                android:text="@string/news" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="0dp" >

            <!-- 设置 -->

            <Button
                android:id="@+id/setting_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/yuol_main_tile_setting"
                android:gravity="bottom|center_horizontal"
                android:padding="15dp"
                android:text="@string/setting" >
            </Button>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:padding="0dp" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>