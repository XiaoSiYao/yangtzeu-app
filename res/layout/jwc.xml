<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".JwcReg" >

    <LinearLayout
        android:id="@+id/jwc_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/yuol_main_title"
        android:gravity="top"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_jwc"
            android:gravity="bottom" >
        </LinearLayout>
        <!-- 教务处 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/jwc"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/main_title"
        android:layout_weight="9"
        android:background="#a7bfdd"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="0dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="0dp" >

            <!-- 分数查询 -->

            <Button
                android:id="@+id/jwc_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/yuol_main_tile_jwc"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="15dp"
                android:text="@string/fenshu" >
            </Button>

            <!-- 学生查询 -->

            <Button
                android:id="@+id/library_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/yuol_main_tile_library"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="15dp"
                android:text="@string/xuesheng" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="0dp" >

            <!-- 选课 -->

            <Button
                android:id="@+id/notice_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/yuol_main_tile_notice"
                android:gravity="bottom|center_horizontal"
                android:padding="15dp"
                android:text="@string/xuanke" >
            </Button>

            <!-- 课表 -->

            <Button
                android:id="@+id/news_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/yuol_main_tile_news"
                android:gravity="bottom|center_horizontal"
                android:padding="15dp"
                android:text="@string/kebiao" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="0dp" >

            <!-- 四六级 -->

            <Button
                android:id="@+id/setting_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/yuol_main_tile_setting"
                android:gravity="bottom|center_horizontal"
                android:padding="15dp"
                android:text="@string/cet" >
            </Button>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:padding="0dp" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>